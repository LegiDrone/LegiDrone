{% extends "PolytechProjetCoBundle::layoutAdmin.html.twig" %}

{% block title %}
  Drones - {{ parent() }}
{% endblock %}

{% block body %}

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-errors">
        {{ flashMessage }}
    </div>
{% endfor %}

<h1>Nouveau Drone</h1>

<div class="box">
    <div class="box-body">
        {{form_start(form)}}

            <table class="table table-responsive">
                <tbody>
                    <tr>
                        <th>{{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}</th>
                        <td>{{ form_errors(form.name) }}{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(form.media.file, "Choix de l'image", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}</th>
                        <td>{{ form_errors(form.media.file) }}{{ form_widget(form.media.file) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(form.approval, "Homologation", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}</th>
                        <td>{{ form_errors(form.approval) }}{{ form_widget(form.approval, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th>{{ form_label(form.document.file, "Document d'Homologation", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}</th>
                        <td>{{ form_errors(form.document.file) }}{{ form_widget(form.document.file) }}</td>
                    </tr>
                </tbody>
            </table>
    </div>
    <div class="box-footer">
        <div class="pull-right">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Créer le drone'}) }}
        </div>
        <div class="pull-left">
        <a href="{{ path('drones') }}" class="btn btn-primary">
                    Retour à la liste
                </a>
    </div>
    </div>
    <div class="hidden">
         {{ form_rest(form) }} 
    </div>
    
</div>

{{form_end(form)}}



{% endblock %}
