{% extends "PolytechProjetCoBundle::layoutAdmin.html.twig" %}

{% block title %}
  Commandes - {{ parent() }}
{% endblock %}

{% block body %}

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-errors">
        {{ flashMessage }}
    </div>
{% endfor %}

<h1>Éditons des Commandes</h1>
<div class="box">
    <div class="box-body">
        {{form_start(edit_form)}}
        {{ form_errors(edit_form) }}
        <table class="table table-responsive">
            <tbody>
                <tr>
                    <th><div class="col-sm-3 control-label">Référence</div></th>
                    <td>{{ entity.reference }}</td>
                </tr>
                <tr>
                    <th>{{ form_label(edit_form.status, "Status", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                    <td>{{ form_errors(edit_form.status) }}{{ form_widget(edit_form.status, {'attr': {'class': 'form-control'}}) }}</td>
                </tr>
                <tr>   
                    <th>{{ form_label(edit_form.date, "date", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                    <td>
                       {{ form_errors(edit_form.date) }}{{ form_widget(edit_form.date) }}
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="pull-right">
            {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Mettre à jour'}) }}
        </div>
        {{form_end(edit_form)}}
    </div>
    <div class="box-footer">
        <div class="col-xs-6">
            <div class="pull-center">
                <a href="{{ path('admin_commandes') }}" class="btn btn-primary">
                    Retour à la liste
                </a>
            </div>

        </div>
        <div class="col-xs-6">
            {{form_start(delete_form)}}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Supprimer'}) }}
            {{form_end(delete_form)}}
        </div>
    </div>
</div>
{% endblock %}
