
{% extends "PolytechProjetCoBundle::layoutAdmin.html.twig" %}

{% block title %}
  Utilisateurs - {{ parent() }}
{% endblock %}

{% block body %}

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-errors">
        {{ flashMessage }}
    </div>
{% endfor %}

<h2>Editer un utilisateur</h2>
<div class="box">
    <div class="box-body">
        
    {#{ form(edit_form) }#}
    {{ form_start(edit_form, {'attr': {'class': 'register-box-body'}}) }}

    {{ form_errors(edit_form) }}

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>{{ form_label(edit_form.nom, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.nom) }}{{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.prenom, "Prénom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.prenom) }}{{ form_widget(edit_form.prenom, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.numrue, "Numéro de rue", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.numrue) }}{{ form_widget(edit_form.numrue, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.nomrue, "Nom de rue", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.nomrue) }}{{ form_widget(edit_form.nomrue, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.cp, "Code Postal", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.cp) }}{{ form_widget(edit_form.cp, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.ville, "Ville", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.ville) }}{{ form_widget(edit_form.ville, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(edit_form.civilite, "Civilité", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}</th>
                <td>{{ form_errors(edit_form.civilite) }}{{ form_widget(edit_form.civilite, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
        </tbody>
    </table>

{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Mettre à jour' }) }}

{{ form_rest(edit_form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(edit_form) }}
        
    </div>
    <div class="box-footer">
        <div class="col-xs-6">
            <div class="pull-center">
                <a href="{{ path('admin_user') }}" class="btn btn-primary">
                    Retour à la liste
                </a>
            </div>

        </div>
        <div class="col-xs-6">
            {{form_start(delete_form)}}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Supprimer' }) }}
            {{form_end(delete_form)}}
        </div>
    </div>
</div>
{% endblock %}
